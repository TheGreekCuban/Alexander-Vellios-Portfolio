{
  "name": "alexander-vellios-portfolio",
  "version": "1.0.0",
  "description": "My professional portfolio containing an about me section and a compilation of all my latest projects and mini-projects.",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheGreekCuban/Alexander-Vellios-Portfolio.git"
  },
  "author": "Alexander Vellios",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TheGreekCuban/Alexander-Vellios-Portfolio/issues"
  },
  "homepage": "https://github.com/TheGreekCuban/Alexander-Vellios-Portfolio#readme",
  "dependencies": {
    "dotenv": "^8.1.0",
    "express": "^4.17.1"
  }
}
