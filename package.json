{
  "name": "alexander-vellios-portfolio",
  "version": "1.0.0",
  "description": "My professional portfolio containing an about me section and a compilation of all my latest projects and mini-projects.",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheGreekCuban/Alexander-Vellios-Portfolio.git"
  },
  "homepage": "https://github.com/TheGreekCuban/Alexander-Vellios-Portfolio#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "dotenv": "^8.1.0",
    "bootstrap": "^4.4.1",
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "materialize-css": "^1.0.0-rc.2",
    "mongoose": "^5.3.16"
  }
}
